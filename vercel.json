{
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/((?!sitemap\\.xml|robots\\.txt).*)", "destination": "/" }
  ]
}
